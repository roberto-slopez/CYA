{% extends 'base.html.twig' %}
{% block MenuCatalog %} class="sidebar-nav-menu open" {% endblock MenuCatalog %}
{% block MenuLodgingPackage %} class="active" {% endblock MenuLodgingPackage %}
{% block ulCatalog %} style="display: block;" {% endblock ulCatalog %}

{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Alojamientos en paquetes registrados
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('lodgingpackage_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
        {% endblock action %}
        {% block titlePanel %}Alojamientos en paquetes registrados{% endblock titlePanel %}
        {% block bodyPanel %}
        <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Precio</th>
                <th>Sede</th>
                <th>Alojaminto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lodgingPackage in lodgingPackages %}
            <tr>
                <td><a href="{{ path('lodgingpackage_show', { 'id': lodgingPackage.id }) }}">{{ lodgingPackage.name }}</a></td>
                <td>{{ lodgingPackage.description }}</td>
                <td>{{ lodgingPackage.price |number_format(2, '.', ',') }}</td>
                <td>{{ lodgingPackage.headquarter.name }}</td>
                <td>{{ lodgingPackage.lodging.name |default(' ') }}</td>
                <td>                        <div class="btn-group">
                            <a href="{{ path('lodgingpackage_show', { 'id': lodgingPackage.id }) }}" class="btn btn-xs btn-primary">show</a>
                        </div>                        <div class="btn-group">
                            <a href="{{ path('lodgingpackage_edit', { 'id': lodgingPackage.id }) }}" class="btn btn-xs btn-primary">edit</a>
                        </div>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function(){ TablesDatatables.init(); });</script>
{% endblock extraJS %}
