{% extends 'base.html.twig' %}
{% block MenuCatalog %} class="sidebar-nav-menu open" {% endblock MenuCatalog %}
{% block MenuDiscretionarySpending %} class="active" {% endblock MenuDiscretionarySpending %}
{% block ulCatalog %} style="display: block;" {% endblock ulCatalog %}

{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Gastos Adicionales
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_discretionaryspending_new') }}" data-original-title="Ingresar nuevo registro"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
    {% endblock action %}
        {% block titlePanel %}Gastos adicionales registrados{% endblock titlePanel %}
        {% block bodyPanel %}
            <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
                <thead>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Value visa{% endtrans %}</th>
                    <th>{% trans %}Value adicional{% endtrans %}</th>
                    <th>{% trans %}Value shipping{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for discretionarySpending in discretionarySpendings %}
                    <tr>
                        <td>{{ discretionarySpending.name }}</td>
                        <td>{{ discretionarySpending.valueVisa }}</td>
                        <td>{{ discretionarySpending.valueAdicional }}</td>
                        <td>{{ discretionarySpending.valueShipping }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('admin_discretionaryspending_show', { 'id': discretionarySpending.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}show{% endtrans %}</a>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('admin_discretionaryspending_edit', { 'id': discretionarySpending.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}edit{% endtrans %}</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });
    </script>
{% endblock extraJS %}
